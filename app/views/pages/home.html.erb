<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/berlin');">
  <h1 class="home-container">
    <span class="text-red">AirOne</span>
    <div class="banner-content hero-text">
      Réservez des logements <br> uniques  et vivez là-bas comme <br> des locaux.
    </div>

    <%= form_tag search_path, method: :get do %>
      <div class="row">
        <div class="col-md-6">
          <%= text_field_tag :search, params[:search], placeholder: "Votre destination de rêve?", class: "form-control", id: "autolocation" %>
        </div>
        <div class="col-md-3">
          <%= text_field_tag :start_date, params[:start_date], placeholder: "Date d'arrivée", class: "form-control datepicker" %>
        </div>
        <div class="col-md-3">
          <%= text_field_tag :end_date, params[:end_date], placeholder: "Date de départ", class: "form-control datepicker" %>
        </div>
      </div>

      <div class="row" style="padding: 15px;">
        <%= submit_tag "Rechercher", class: "btn btn-normal btn-lg" %>
      </div>
    <% end %>

  </h1>
</div>

<div class="container">
  <!-- Homes -->
  <div>
    <h3>Homes</h3>
  </div>
  <br>

  <div class="row">
    <%= render partial: "rooms/rooms_list", locals: {rooms: @rooms} %>
  </div>

  <!-- Cities -->
  <div>
    <h3>Cities</h3>
  </div>
  <br>

  <div class="row">
    <div class="col-md-3 col-sm-12">
      <a href="http://localhost:3000/search?utf8=%E2%9C%93&search=los+angeles">
        <div class="discovery-card" style="background-image: url('/assets/LA.jpg')"></div>
      </a>
    </div>
    <div class="col-md-3 col-sm-12">
      <a href="http://localhost:3000/search?utf8=%E2%9C%93&search=london">
        <div class="discovery-card" style="background-image: url('/assets/LD.jpg')"></div>
      </a>
    </div>
    <div class="col-md-3 col-sm-12">
      <a href="http://localhost:3000/search?utf8=%E2%9C%93&search=paris">
        <div class="discovery-card" style="background-image: url('/assets/PR.jpg')"></div>
      </a>
    </div>
    <div class="col-md-3 col-sm-12">
      <a href="http://localhost:3000/search?utf8=%E2%9C%93&search=miami">
        <div class="discovery-card" style="background-image: url('/assets/MI.jpg')"></div>
      </a>
    </div>
  </div>
  <br>
  <br>
</div>

<script>
  $('#start_date').datepicker({
    dateFormat: 'dd-mm-yy',
    minDate: 0,
    maxDate: '3m',
    onSelect: function(selected) {
      $('#end_date').datepicker("option", "minDate", selected);
    }
  });

  $('#end_date').datepicker({
    dateFormat: 'dd-mm-yy',
    minDate: 0,
    maxDate: '3m',
    onSelect: function(selected) {
      $('#start_date').datepicker("option", "maxDate", selected);
    }
  });

  $(function() {
    $("#autolocation").geocomplete();
  });
</script>
