<ul class="sidebar-list">
  <li class="sidebar-item">
    <%= link_to "Listing", listing_room_path(@room), class: "sidebar-link active"  %>
    <span class="pull-right text-babu"><i class="fa fa-check"></i></span>
  </li>
  <li class="sidebar-item">
    <%= link_to "Pricing", pricing_room_path(@room), class: "sidebar-link active"  %>
    <% if !@room.price.blank? %>
      <span class="pull-right text-babu"><i class="fa fa-check"></i></span>
    <% end %>
  </li>
  <li class="sidebar-item">
    <%= link_to "Description", description_room_path(@room), class: "sidebar-link active"  %>
    <% if !@room.listing_name.blank? %>
      <span class="pull-right text-babu"><i class="fa fa-check"></i></span>
    <% end %>
  </li>
  <li class="sidebar-item">
    <%= link_to "Photos", photo_upload_room_path(@room), class: "sidebar-link active"  %>
  </li>
  <li class="sidebar-item">
    <%= link_to "Amenities", amenities_room_path(@room), class: "sidebar-link active"  %>
    <span class="pull-right text-babu"><i class="fa fa-check"></i></span>
  </li>
  <li class="sidebar-item">
    <%= link_to "Location", location_room_path(@room), class: "sidebar-link active"  %>
    <% if !@room.address.blank? %>
      <span class="pull-right text-babu"><i class="fa fa-check"></i></span>
    <% end %>
  </li>
</ul>
